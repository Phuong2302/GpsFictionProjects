<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/ContentAdmin"
android:layout_width="match_parent"
    android:background="@color/black"
    android:padding="@dimen/buttonsPadding"
     android:layout_height="wrap_content"
    >

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        >
        <Spinner xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/HomeActivityListSpinner"
            android:spinnerMode="dropdown"
            android:layout_margin="@dimen/buttonsPadding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:dropDownWidth="fill_parent"
            >

        </Spinner>
        <Button
            android:text="@string/dialogButtonValidate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="@dimen/buttonsPadding"
            android:layout_margin="@dimen/buttonsPadding"
            android:textSize="@dimen/adminTextSize"
            android:background="@drawable/buttonstate"
            android:onClick="changeHomeActivity"
            />
    </LinearLayout>

</ScrollView>
