<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentForEachZone"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/contenAllForEachZone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.sdesimeur.android.gpsfiction.views.ZoneName4ListView
            android:id="@+id/textNameOfZone"
            style="@style/TabOneLineTitle"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/color4zoneselected"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" />

        <LinearLayout
            android:id="@+id/contentDistanceDirectionForEachZone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.sdesimeur.android.gpsfiction.views.MiniCompass4ListView
                android:id="@+id/miniCompassDirection"
                style="@style/TabOneLineMiniCompass" />

            <com.sdesimeur.android.gpsfiction.views.ZoneDistance4ListView
                android:id="@+id/textDistance"
                style="@style/TabOneLineText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>