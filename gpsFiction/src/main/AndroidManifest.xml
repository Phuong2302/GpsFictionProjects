<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sdesimeur.android.gpsfiction.activities"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-feature android:name="android.hardware.location.gps" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- <uses-permission android:name="android.permission.INTERNET" /> -->
    <!-- <uses-permission android:name="android.permission.SET_DEBUG_APP" /> -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyAppTheme"
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:supportsRtl="true"
        >
        <activity
            android:name=".GpsFictionActivity"
            android:alwaysRetainTaskState="true"
            android:configChanges="locale"
            >
        <intent-filter>
            <action android:name="com.sdesimeur.android.gpsfiction.intent.action.STARTGAME" />
            <category android:name="com.sdesimeur.android.gpsfiction.intent.category.GPSFICTIONACTIVITY" />
            <!--
            <action android:name="com.sdesimeur.android.gpsfiction.intent.action.STARTGAME" />
            <category android:name="android.intent.category.HOME" />
            <category android:name="android.intent.category.MONKEY" />
            -->
            </intent-filter>
            <intent-filter>
                <action android:name="com.sdesimeur.android.gpsfiction.intent.action.RESETGAMES" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name=".CalcRouteAndSpeakService"
            android:enabled="true"
            android:exported="true"
            android:launchMode="singleTop"
            android:persistent="true" />
        <service
            android:name=".MyLocationListenerService"
            android:enabled="true"
            android:exported="true"
            android:launchMode="singleTop"
            android:persistent="true" />
    </application>

</manifest>